@namespace FluentTestamente.Components

<FluentCard Style="max-width: 400px; margin: 50px auto; padding: 20px;">
    <FluentStack Orientation="Microsoft.FluentUI.AspNetCore.Components.Orientation.Vertical" VerticalAlignment="VerticalAlignment.Center">
        <FluentLabel Typo="@Typography.H3" Style="text-align: center; margin-bottom: 20px;">
            @Text 
        </FluentLabel>
        
        <FluentStack Orientation="Microsoft.FluentUI.AspNetCore.Components.Orientation.Horizontal" HorizontalAlignment="HorizontalAlignment.Center">
            <FluentButton Appearance="Appearance.Accent" @onclick="OnYes">
                Yes
            </FluentButton>
            <FluentButton Appearance="Appearance.Neutral" @onclick="OnNo">
                No
            </FluentButton>
        </FluentStack>
    </FluentStack>
</FluentCard>

@code {
    [Parameter] public string Text { get; set; }
    [Parameter] public EventCallback OnYes { get; set; }
    [Parameter] public EventCallback OnNo { get; set; }
}